
# List images
sudo docker image ls

# Remove existing images
sudo docker image rm -f adcirc_supp:v0.0.1

# Cleanup
sudo docker system prune -a

# Build an image
# sudo docker build --no-cache -t adcirc_supp:latest .
sudo docker build --no-cache -t adcirc_supp:v0.0.1 .

# Reset the tag ID
sudo docker image tag adcirc_supp:latest renciorg/adcirc_supp:latest
sudo docker image tag adcirc_supp:v0.0.1 renciorg/adcirc_supp:v0.0.1

# Push the image to docker 

sudo docker login

# Test your image: Start an interactive shell to the image
sudo docker run -it adcirc_supp:v0.0.1 bash

